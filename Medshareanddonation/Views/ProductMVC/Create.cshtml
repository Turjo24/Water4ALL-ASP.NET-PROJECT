@{
    ViewData["Title"] = "Create Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Medshare & Donation</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">

                <div class="flex items-center space-x-4">
                    <a href="/all" class="text-black hover:text-gray-500 font-bold transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>Back to Products
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Access Denied Alert -->
        <div id="accessDenied" class="hidden mb-8">
            <div class="bg-red-50 border border-red-200 rounded-lg p-6">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-triangle text-red-500 text-2xl mr-4"></i>
                    <div>
                        <h3 class="text-red-800 font-bold text-lg">Access Denied</h3>
                        <p class="text-red-700">You need admin privileges to create products.</p>
                        <a href="ProductView" class="text-red-600 hover:text-red-800 underline mt-2 inline-block">
                            Go back to products
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Header -->
        <div id="pageHeader" class="mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                <i class="fas fa-plus-circle text-blue-600 mr-3"></i>Create New Product
            </h1>
            <p class="text-gray-600 text-lg">Add a new medical product to the donation system</p>
        </div>

        <!-- Form Container -->
        <div id="formContainer" class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-purple-600 px-8 py-6">
                <h2 class="text-2xl font-bold text-white">Product Information</h2>
            </div>

            <form id="productForm" class="p-8 space-y-6" enctype="multipart/form-data">
                <!-- Product Name and Price Row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="productName" class="block text-sm font-semibold text-gray-700 mb-2">
                            Product Name *
                        </label>
                        <input type="text"
                               id="productName"
                               name="Name"
                               required
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="Enter product name">
                    </div>

                    <div>
                        <label for="productPrice" class="block text-sm font-semibold text-gray-700 mb-2">
                            Price ($) *
                        </label>
                        <input type="number"
                               id="productPrice"
                               name="Price"
                               step="0.01"
                               min="0"
                               required
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="0.00">
                    </div>
                </div>

                <!-- Category ID and Image Row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="productCategory" class="block text-sm font-semibold text-gray-700 mb-2">
                            Category ID *
                        </label>
                        <input type="number"
                               id="productCategory"
                               name="CategoryId"
                               required
                               min="1"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
                               placeholder="Enter category ID">
                    </div>

                    <div>
                        <label for="productImage" class="block text-sm font-semibold text-gray-700 mb-2">
                            Product Image
                        </label>
                        <input type="file"
                               id="productImage"
                               name="ImageUrl"
                               accept="image/*"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100">
                    </div>
                </div>

                <!-- Description -->
                <div>
                    <label for="productDescription" class="block text-sm font-semibold text-gray-700 mb-2">
                        Description *
                    </label>
                    <textarea id="productDescription"
                              name="Description"
                              required
                              rows="5"
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"
                              placeholder="Enter detailed product description..."></textarea>
                </div>

                <!-- Active Status -->
                <div class="flex items-center space-x-3">
                    <input type="checkbox"
                           id="productActive"
                           name="IsActive"
                           checked
                           class="h-5 w-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500">
                    <label for="productActive" class="text-sm font-semibold text-gray-700">
                        Product is active and available
                    </label>
                </div>

                <!-- Image Preview -->
                <div id="imagePreview" class="hidden">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Image Preview</label>
                    <img id="previewImg" src="" alt="Preview" class="max-w-xs h-48 object-cover rounded-lg border border-gray-300 shadow-md">
                </div>

                <!-- Submit Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 pt-8 border-t border-gray-200">
                    <button type="submit"
                            id="submitBtn"
                            class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-lg font-semibold transition-all transform hover:-translate-y-1 hover:shadow-lg">
                        <i class="fas fa-save mr-2"></i>
                        <span>Create Product</span>
                    </button>

                    <a href="ProductView"
                       class="bg-gray-500 hover:bg-gray-600 text-white px-8 py-4 rounded-lg font-semibold transition-all text-center">
                        <i class="fas fa-times mr-2"></i>Cancel
                    </a>

                    <button type="button"
                            onclick="resetForm()"
                            class="bg-yellow-500 hover:bg-yellow-600 text-white px-8 py-4 rounded-lg font-semibold transition-all">
                        <i class="fas fa-undo mr-2"></i>Reset Form
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Success Modal -->
    <div id="successModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
        <div class="bg-white rounded-xl p-8 max-w-md mx-4 text-center shadow-2xl">
            <div class="text-green-500 text-6xl mb-6">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Success!</h3>
            <p class="text-gray-600 mb-8">Product has been created successfully.</p>
            <div class="space-y-4">
                <a href="ProductView" class="block w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-6 rounded-lg transition-colors font-semibold">
                    View All Products
                </a>
                <button onclick="hideSuccessModal(); resetForm()" class="block w-full bg-gray-500 hover:bg-gray-600 text-white py-3 px-6 rounded-lg transition-colors font-semibold">
                    Create Another Product
                </button>
            </div>
        </div>
    </div>

    <script>
        const BASE_URL = 'https://localhost:7217/api/ProductsApi';

        // Check if user is admin
        function checkAuthStatus() {
            const token = localStorage.getItem('token');
            const userRole = localStorage.getItem('userRole');

            if (!token || userRole !== 'Admin') {
                document.getElementById('accessDenied').classList.remove('hidden');
                document.getElementById('pageHeader').classList.add('hidden');
                document.getElementById('formContainer').classList.add('hidden');
            }
        }

        // Get authorization headers
        function getAuthHeaders() {
            const token = localStorage.getItem('token');
            return token ? { 'Authorization': `Bearer ${token}` } : {};
        }

        // Image preview functionality
        document.getElementById('productImage').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewImg').src = e.target.result;
                    document.getElementById('imagePreview').classList.remove('hidden');
                };
                reader.readAsDataURL(file);
            } else {
                document.getElementById('imagePreview').classList.add('hidden');
            }
        });

        // Reset form
        function resetForm() {
            document.getElementById('productForm').reset();
            document.getElementById('imagePreview').classList.add('hidden');
            document.getElementById('productActive').checked = true;
        }

        // Show/hide success modal
        function showSuccessModal() {
            document.getElementById('successModal').classList.remove('hidden');
        }

        function hideSuccessModal() {
            document.getElementById('successModal').classList.add('hidden');
        }

        // Handle form submission - POST API
        document.getElementById('productForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const token = localStorage.getItem('token');
            const userRole = localStorage.getItem('userRole');

            if (!token || userRole !== 'Admin') {
                alert('You need admin privileges to create products');
                return;
            }

            const submitBtn = document.getElementById('submitBtn');
            const originalText = submitBtn.innerHTML;

            // Show loading state
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Creating Product...';
            submitBtn.disabled = true;

            try {
                const formData = new FormData();
                formData.append('Name', document.getElementById('productName').value);
                formData.append('Description', document.getElementById('productDescription').value);
                formData.append('Price', document.getElementById('productPrice').value);
                formData.append('CategoryId', document.getElementById('productCategory').value);
                formData.append('IsActive', document.getElementById('productActive').checked);

                const imageFile = document.getElementById('productImage').files[0];
                if (imageFile) {
                    formData.append('ImageUrl', imageFile);
                }

                const response = await fetch(BASE_URL, {
                    method: 'POST',
                    headers: {
                        ...getAuthHeaders()
                    },
                    body: formData
                });

                if (response.ok) {
                    showSuccessModal();
                } else {
                    const errorText = await response.text();
                    throw new Error(errorText || 'Failed to create product');
                }
            } catch (error) {
                console.error('Error creating product:', error);
                alert('Error creating product: ' + error.message);
            } finally {
                // Reset button state
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        });

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            checkAuthStatus();
        });
    </script>
</body>
</html>