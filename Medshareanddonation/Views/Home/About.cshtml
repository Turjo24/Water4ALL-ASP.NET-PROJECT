@{
    ViewData["Title"] = "About";
}

<div class="flex justify-center items-center min-h-screen bg-gray-100">
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-2xl">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">About MedShare</h2>

        <p class="text-gray-700 text-lg mb-4">
            MedShare is a platform that connects donors and recipients for medical supplies and donations.
            Our mission is to provide an easy and reliable way for people to contribute to health-related causes.
        </p>

        <p class="text-gray-700 text-lg mb-4">
            Whether you are a donor or a recipient, MedShare ensures transparency and efficient tracking of all requests.
        </p>

        <p class="text-gray-700 text-lg">
            Thank you for being part of our community and helping make healthcare accessible to everyone.
        </p>
    </div>
</div>
