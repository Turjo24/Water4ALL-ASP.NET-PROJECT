@model Medshareanddonation.Models.Order

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Complete</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-50 min-h-screen">

    <nav class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <a href="/All" class="text-gray-600 hover:text-blue-600 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>Continue Shopping
                </a>
                <span class="text-gray-500 font-semibold">Order Complete</span>
            </div>
        </div>
    </nav>

    <div class="max-w-3xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl shadow p-8 text-center">
            <div class="w-20 h-20 rounded-full bg-green-100 flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-check text-3xl text-green-600"></i>
            </div>
            <h1 class="text-2xl font-bold text-gray-900 mb-2">Thank you for your order!</h1>
            <p class="text-gray-700 mb-6">Your order <span class="font-semibold">#@Model.Id</span> has been placed successfully.</p>

            <div class="text-left border-t pt-4 mt-4">
                <h2 class="text-lg font-semibold mb-2">Shipping Details</h2>
                <p><strong>Name:</strong> @Model.ShippingName</p>
                <p><strong>Phone:</strong> @Model.ShippingPhone</p>
                <p><strong>Address:</strong> @Model.ShippingAddress, @Model.City, @Model.PostalCode</p>
                <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
            </div>

            <div class="text-left border-t pt-4 mt-4">
                <h2 class="text-lg font-semibold mb-2">Order Items</h2>
                <ul class="divide-y divide-gray-200">
                    @foreach (var item in Model.OrderItems)
                    {
                        <li class="py-2 flex justify-between">
                            <span>@item.Product?.Name ?? "Product"</span>
                            <span>@item.Quantity x @item.UnitPrice.ToString("0.00")<span class="text-md font-bold ">Tk</span> = @item.TotalPrice.ToString("0.00")<span class="text-md font-bold ">Tk</span></span>
                        </li>
                    }
                </ul>
                <div class="flex justify-between font-bold text-gray-900 mt-4 text-lg">
                    <span>Total:</span>
                    <span>@Model.TotalAmount.ToString("0.00")<span class="text-md font-bold ">Tk</span></span>
                </div>
            </div>
            <div class="flex mx-auto items-center justify-center gap-5">
                <!-- Back to Products Button -->
                <a href="/all" class="inline-block mt-6 bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded-lg font-semibold">
                    <i class="fas fa-arrow-left mr-2"></i>Back to Products
                </a>

                
            </div>

            
        </div>
    </div>

</body>
</html>
